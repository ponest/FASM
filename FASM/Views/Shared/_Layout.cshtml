<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/4.0.0-beta.3/lumen/bootstrap.min.css" />

    <title>FASM | @ViewBag.Title</title>

    @if (IsSectionDefined("Styles"))
    {@RenderSection("Styles", required: false)}

    @Styles.Render("~/Content/css")

    <link rel="shortcut icon" href="~/siteIcon.ico" type="image/x-icon" />
    <link rel="icon" href="~/siteIcon.ico" type="image/ico" />
</head>
<body class="app sidebar-mini">
    <!-- Navbar-->
    <header class="app-header">
        <a class="app-header__logo" href="index.html">Fixed Assets Management</a>
        <!-- Sidebar toggle button--><a class="app-sidebar__toggle" href="#" data-toggle="sidebar"></a>
        <!-- Navbar Right Menu-->
        <ul class="app-nav">
            <li class="app-search">
                <input class="app-search__input" type="search" placeholder="Search">
                <button class="app-search__button"><i class="fa fa-search"></i></button>
            </li>
            <!-- User Menu-->
            <li><a class="dropdown-item" href="@Url.Action("Logout", "Accounts")" id="LogoutBtn"><i class="fa fa-sign-out fa-lg"></i> Logout</a></li>
        </ul>
    </header>
    <!-- Sidebar menu-->
    <div class="app-sidebar__overlay" data-toggle="sidebar"></div>
    <aside class="app-sidebar">
        <div class="app-sidebar__user">
            <img class="app-sidebar__user-avatar" src="https://s3.amazonaws.com/uifaces/faces/twitter/jsa/48.jpg" alt="User Image">
            <div>
                <p class="app-sidebar__user-name">@HttpContext.Current.Session["user"].ToString()</p>
                <p class="app-sidebar__user-designation">Frontend Developer</p>
            </div>
        </div>
        <ul class="app-menu">
            <li><a class="app-menu__item" href="@Url.Action("Index","Accounts")"><i class="app-menu__icon fa fa-dashboard"></i><span class="app-menu__label">Dashboard</span></a></li>
            <li class="treeview">
                <a class="app-menu__item" href="#" data-toggle="treeview"><i class="app-menu__icon fa fa-wrench"></i><span class="app-menu__label">Setups</span><i class="treeview-indicator fa fa-angle-right"></i></a>
                <ul class="treeview-menu">
                    <li><a class="treeview-item" href="@Url.Action("IndexCategories","Setups")"><i class="icon fa fa-life-ring"></i> Categories</a></li>
                    <li><a class="treeview-item" href="@Url.Action("IndexLocation","Setups")"><i class="icon fa fa-life-ring"></i> Locations</a></li>
                    <li><a class="treeview-item" href="@Url.Action("IndexDistrict","Setups")"><i class="icon fa fa-life-ring"></i> Districts</a></li>
                    <li><a class="treeview-item" href="@Url.Action("IndexRoles","Accounts")"><i class="icon fa fa-life-ring"></i> Roles</a></li>
                    <li><a class="treeview-item" href="@Url.Action("IndexRegions","Setups")"><i class="icon fa fa-life-ring"></i> Regions</a></li>
                    <li><a class="treeview-item" href="@Url.Action("IndexSuppliers","Setups")"><i class="icon fa fa-life-ring"></i>Suppliers</a></li>
                </ul>
            </li>
            <li><a class="app-menu__item" href="@Url.Action("IndexUsers","Accounts")"><i class="app-menu__icon fa fa-user"></i><span class="app-menu__label"> Manage Users</span></a></li>
            <li class="treeview">
                <a class="app-menu__item" href="#" data-toggle="treeview"><i class="app-menu__icon fa fa-edit"></i><span class="app-menu__label">Manage Assets</span><i class="treeview-indicator fa fa-angle-right"></i></a>
                <ul class="treeview-menu">
                    <li><a class="treeview-item" href="@Url.Action("IndexAssetDefinition","AssetManagement")"><i class="icon fa fa-circle-o"></i> Asset Definition</a></li>
                    <li><a class="treeview-item" href="form-custom.html"><i class="icon fa fa-circle-o"></i> Custom Components</a></li>
                    <li><a class="treeview-item" href="form-samples.html"><i class="icon fa fa-circle-o"></i> Form Samples</a></li>
                    <li><a class="treeview-item" href="form-notifications.html"><i class="icon fa fa-circle-o"></i> Form Notifications</a></li>
                </ul>
            </li>
            <li class="treeview">
                <a class="app-menu__item" href="#" data-toggle="treeview"><i class="app-menu__icon fa fa-th-list"></i><span class="app-menu__label">Tables</span><i class="treeview-indicator fa fa-angle-right"></i></a>
                <ul class="treeview-menu">
                    <li><a class="treeview-item" href="table-basic.html"><i class="icon fa fa-circle-o"></i> Basic Tables</a></li>
                    <li><a class="treeview-item" href="table-data-table.html"><i class="icon fa fa-circle-o"></i> Data Tables</a></li>
                </ul>
            </li>
        </ul>
    </aside>
    <main class="app-content">
        <div class="app-title">
            <div>
                <h1>@ViewBag.HeaderText</h1>
            </div>
            @RenderSection("breadcrumb", required: false)

        </div>

        @RenderBody()
    </main>
    <!-- Essential javascripts for application to work-->
    @Scripts.Render("~/Scripts/js")
    @RenderSection("scripts", required: false)

</body>
</html>